/* 48em | 768px | Tablet*/
@media screen and (min-width: @tabletViewportWidth){

    .account--welcome {
        margin-bottom: 0;
        background: white;
        border: 0 none;
        padding: 15px 0 0 0;

        .panel--title{
            padding-top:0;
            font-weight: 600;
            font-size: 24px;
            text-align: left;
        }

        .panel h1.panel--title {
            font-weight: 600;
            font-size: 24px;
            text-align: left;
        }
    }


    .account--menu {
        border: 0 none;
    }

    .account--menu .navigation--headline {
        display: none;
    }

    .account--menu .navigation--link.link--logout {
        margin: 0.625rem 0rem 0rem 0rem;
        padding: 0.625rem 0rem 0rem 0rem;
        font-weight: 500;
        color: @brand-primary;
        background: transparent;
        border: 0 none;
        text-decoration: underline;

        &:hover{
            text-decoration: none;
            color: #444;
        }
    }


    .account--actions{
        .btn, .btn.is-secondary, .btn.is-primary{
            line-height: 1.75rem;
            background: transparent;
            border: 1px solid #212221 !important;;
            color:@brand-primary;
            font-weight: 500;
            text-align: center;
            &:hover{
                background: @jos-button-ouline-hover-bg;
                color: @jos-button-ouline-hover-font;
            }
        }
    }

    .js--is--dropdown-active .account--dropdown-navigation {
        display: block;
        padding: 20px;
        min-width: 200px;
        margin: 0 auto;
        text-align: center;
        right: -50px;
        //border: 1px solid #eee;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);

         .account--menu {
            text-align: center;
            background: #fff;

             &:after{
                 display: none;
             }



             .navigation--headline{
                 text-align: center;
             }

             .account--menu-container{

                 padding: 0.625rem 0  0.625rem 0;

                 .sidebar--navigation {
                     text-align: center;
                 }
             }
       }
    }
    .account--orders-overview {
        .panel--tr {
            padding: 10px  0 ;
        }
    }

}

