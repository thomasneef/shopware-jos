.account--welcome {
    margin-bottom: 0;
    background: white;
    border: 0 none;
    padding: 15px 0 0 0;

    .panel--title{
        padding-top:0;
        font-weight: 600;
        font-size: 24px;
        text-align: center;
    }
}

.account--address{

    &.account--content{
        .unitize(padding-top,30);
    }

    .account--welcome{
        .unitize(margin-bottom,20);
    }

    .address--item-content{
        padding: 2% 0 0 0;

        .btn.is--primary{
            line-height: 1.75rem;
            background: transparent;
            border: 1px solid #212221 !important;;
            color: @brand-primary;
            font-weight: 500;
            text-align: center;
            &:hover{
                background: @jos-button-ouline-hover-bg;
                color: @jos-button-ouline-hover-font;
            }
        }
    }
      
}

.account-address--container .account--box .btn{
    line-height: 1.75rem;
    background: transparent;
    border: 1px solid @brand-primary;
    color: @brand-primary;
    font-weight: 500;
    text-align: center;
    &:hover{
        background: @jos-button-ouline-hover-bg;
        color: @jos-button-ouline-hover-font;
    }
}




.account--content{
    .account--welcome{
        text-align: center;

        .panel--body {
            text-align: center;
        }

    }

    .account-info--container{
        .account--box{
            .panel--title{
                border-bottom: 1px solid #eee;
                text-align: center;
            }

            .panel--body {
                text-align: center;
            }

            .panel--actions{
                .btn{
                    width: 100%;
                    text-align: center;
                    &:hover{
                        background: @jos-button-ouline-hover-bg;
                        color: @jos-button-ouline-hover-font;
                    }
                }
            }
        }
    }

    .account-address--container{
        .account--box{
            .panel--title{
                border-bottom: 1px solid #eee;
                text-align: center;
            }

            .panel--body {
                text-align: center;
            }

            .panel--actions{
                .btn{
                    text-align: center;
                    width: 100%;
                    &:hover{
                        background: @jos-button-ouline-hover-bg;
                        color: @jos-button-ouline-hover-font;
                    }
                }
            }
        }
    }

}

.account--dropdown-navigation .navigation--signin {
    margin-bottom: 0.375rem;
    margin-top: 0.3125rem;
    padding: 0 20px 20px 20px;
}
.account--menu .account--menu-container .sidebar--navigation .navigation--entry {
    padding: 0;
    width: 100%;
}



.account--orders-overview {
    border: 1px solid @panel-border;

    p { .unitize(font-size, 14); }

    .orders--table-header {
        display: none;
        background: @panel-table-header-bg;

        .panel--th {
            color: @panel-table-header-color;
        }
    }

    .panel--tr {
        padding: 10px  ;
    }

    .panel--td {
        .clearfix();
        .unitize-padding(5, 10);
        display: block;
        float: none;
    }

    .column--info-labels,
    .column--info-data {
        width: 50%;
        float: left;
        text-align: left;

    }

    .column--info-data {
        .unitize-padding(5, 10, 0, 0);
    }

    .column--summary-labels,
    .column--summary-data {
        width: 50%;
        float: left;
        text-align: left;
    }

    .column--summary-data {
        .unitize-padding(5, 10, 0, 0);
    }

    .column--label,
    .column--value {
        width: 50%;
        float: left;
    }

    .column--label {
        font-weight: @font-bold-weight;
    }
}
.order--actions {
    text-align: center;
}

